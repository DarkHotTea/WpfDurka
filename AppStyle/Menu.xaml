<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfDurka">
    <Style x:Key="Rectangle_Menu" TargetType="{x:Type Rectangle}">
        <Setter Property="Fill" Value="#FF00DAFF"/>
        <Setter Property="Height" Value="2.5px"/>
        <Setter Property="Width" Value="0"/>
        <Setter Property="RadiusX" Value="1px"/>
        <Setter Property="RadiusY" Value="1px"/>
    </Style>
    <Style x:Key="StackPanel_Menu" TargetType="{x:Type StackPanel}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>
</ResourceDictionary>